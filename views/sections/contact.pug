section#contact.py-24
  .container
    .text-center
      h2.mb-12.text-4xl.text-gray-700.font-bold.tracking-wide.wow.fadeInDown(data-wow-delay="0.3s") Contact
    .flex.flex-wrap.contact-form-area.wow.fadeInUp(data-wow-delay="0.4s")
      .w-full(class="md:w-1/2")
        .contact
          h2.uppercase.font-bold.text-xl.text-gray-700.mb-5.ml-3 Contact Form
          form#contactForm(action="../assets/contact.php")
            .flex.flex-wrap
              .w-full(class="sm:w-1/2 md:w-full lg:w-1/2")
                .mx-3
                  input#name.form-input.rounded-full(
                    data-error="Please enter your name" 
                    required="" 
                    placeholder="Name" 
                    name="name" 
                    type="text"
                    )
              .w-full(class="sm:w-1/2 md:w-full lg:w-1/2")
                .mx-3
                  input#email.form-input.rounded-full(
                    data-error="Please enter your email" 
                    required="" 
                    name="email" 
                    placeholder="Email" 
                    type="text"
                    )
              .w-full
                .mx-3
                  input#subject.form-input.rounded-full(
                    data-error="Please enter your subject" 
                    required="" 
                    name="subject" 
                    placeholder="Subject" 
                    type="text"
                    )
              .w-full
                .mx-3
                  textarea#message.form-input.rounded-lg(
                    required="" 
                    data-error="Write your message" 
                    rows="5" 
                    placeholder="Your Message" 
                    name="message"
                    )
              .w-full
                .submit-button.mx-3
                  button#form-submit.btn(type="submit") Send Message
      .w-full(class="md:w-1/2")
        .ml-3.wow.fadeIn(class="md:ml-12")
          h2.uppercase.font-bold.text-xl.text-gray-700.mb-5 Get In Touch
          div
            .flex.flex-wrap.mb-6.items-center
              .contact-icon
                i.lni.lni-map-marker
              p.pl-3 Skopje, Macedonia
            .flex.flex-wrap.mb-6.items-center
              .contact-icon
                i.lni.lni-envelope
              p.pl-3
                a.block(href="#") email@gmail.com
                a.block(href="#") tomsaulnier@gmail.com
            .flex.flex-wrap.mb-6.items-center
              .contact-icon
                i.lni.lni-phone-set
              p.pl-3
                a.block(href="#") +42 374 5967
                a.block(href="#") +99 123 5967
